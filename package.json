{
	"name": "ocsb-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"dev": "nest start --watch",
		"ssh": "node -r dotenv/config -e \"require('child_process').execSync('ssh -N -L ' + process.env.DATABASE_PORT + ':' + process.env.DATABASE_HOST + ':' + process.env.DATABASE_DEFAULT_PORT + ' ' + process.env.DATABASE_SSH_USER + '@' + process.env.DATABASE_SSH_HOST + ' -p ' + process.env.DATABASE_SSH_PORT)\"",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"ent": "sh ./src/libs/typeorm/generate.sh ./ocsb-interface/src/entities",
		"ent-window": ".\\src\\libs\\typeorm\\generate.bat .env .\\ocsb-interface\\src\\entities",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"pug": "pug -w views -o dist"
	},
	"dependencies": {
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/common": "^10.4.15",
		"@nestjs/config": "^3.3.0",
		"@nestjs/core": "10.4.4",
		"@nestjs/microservices": "^10.4.15",
		"@nestjs/platform-express": "^10.4.15",
		"@nestjs/swagger": "^7.4.2",
		"@nestjs/typeorm": "^10.0.2",
		"bcryptjs": "^2.4.3",
		"change-case": "^4.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.7",
		"jsonwebtoken": "^9.0.2",
		"multer": "^1.4.5-lts.1",
		"pg": "^8.13.1",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.20",
		"xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.2",
		"@types/multer": "^1.4.12",
		"@types/node": "^20.3.1",
		"@types/ssh2": "^1.15.4",
		"@types/supertest": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jest": "^29.5.0",
		"prettier": "^3.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"overrides": {
		"@nestjs-modules/mailer": {
			"mjml": "^5.0.0-alpha.4"
		}
	}
}
